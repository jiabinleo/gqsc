/* pages/userCenter/userCenter.wxss */
.myCenter .userBg {
  margin: 0rpx 35rpx;
  text-align: center;
  width: 680rpx;
  height: 256rpx;
  background: linear-gradient(-5deg, #1ea0e3, #32b5ee, #35bcf0);
  box-shadow: 0px 5px 13px 2px rgba(49, 180, 238, 0.3);
  border-radius: 5px;
}
.myCenter .userBg image {
  margin-top: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #ffffff;
}
.myCenter .userBg text {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
}
.myCenter .list {
  padding: 30rpx 35rpx;
}
.myCenter .list view {
  overflow: hidden;
  height: 87rpx;
  line-height: 87rpx;
  padding: 0 35rpx;
}
.myCenter .list view text {
  font-size: 28rpx;
  color: #333333;
}
.myCenter .list view image {
  margin-top: 32rpx;
  margin-right: 15rpx;
}
.myCenter .list view image.bf {
  width: 30rpx;
  height: 30rpx;
  float: left;
}
.myCenter .list view image.af {
  float: right;
  width: 12rpx;
  height: 22rpx;
}
