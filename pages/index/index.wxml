<!--index.wxml-->
<view id="j_page" class="container">

  <view>
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <view class="page-section page-section-spacing swiper">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" vertical="{{vertical}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px">
          <block wx:for="{{bannerList}}" wx:key="*this">
            <swiper-item>
              <view class="swiper-item">
                <image src="{{imgUrl + item.bannerImg}}" mode="widthFix"></image>
              </view>
            </swiper-item>
          </block>
        </swiper>
      </view>
      <block>
        <view class="nav">
          <view class="{{navActive ? 'navA' : ''}}" bindtap="gongying">
            供应
          </view>
          <view class="{{navActive ? '' : 'navA'}}" bindtap="qiugou">
            求购
          </view>
        </view>
      </block>
      <block>
        <view class="select">
          <view class="nav1" bindtap="fenlei">选择分类</view>
          <view class="nav1" bindtap="diqu">选择地区</view>
          <view class="nav1" bindtap="paixu">排序方式</view>
        </view>
      </block>
      <block>
        <view class="section" style="height: {{viewHeight}}px;">
          <scroll-view bindtap="oneTag" scroll-y style="height: {{viewHeight}}px;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
            <block wx:for="{{treeOne}}" wx:key="*this">
              <view id="t{{item.id}}" data-id="{{index}}" class="scroll-view-item bc_green">{{item.text}}</view>
            </block>
          </scroll-view>
          <scroll-view bindtap="twoTag" scroll-y style="height: {{viewHeight}}px;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
            <block wx:for="{{treeTwo}}" wx:key="*this">
              <view id="t{{item.id}}" data-id="{{index}}" class="scroll-view-item bc_green">{{item.text}}</view>
            </block>
          </scroll-view>
          <scroll-view bindtap="threeTag" scroll-y style="height: {{viewHeight}}px;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
            <block wx:for="{{treeThree}}" wx:key="*this">
              <view id="t{{item.id}}" class="scroll-view-item bc_green">{{item.text}}</view>
            </block>
          </scroll-view>
        </view>
      </block>
      <!-- <view class="btn-area">
        <button size="mini" bindtap="tap">click me to scroll into view</button>
      </view> -->
      <block wx:for="{{newList}}" wx:key="*this">
        <view class="newList">
          <view catchtap="onTouch" data-id="{{item.id}}">
            <view class="userMsg">
              <view class="userImg">
                <image src="{{item.icon}}" mode="widthFix"></image>
              </view>
              <view class="username">
                <view class="name">
                  <view class="namel">{{item.userName?item.userName:'悦农通'}}</view>
                  <view class="time">{{item.publishTime}}</view>
                </view>
                <view class="address">
                  <text>{{item.area}}</text>
                </view>
              </view>
            </view>
            <view class="title">
              <text>{{item.title}}</text>
            </view>
            <view class="detail">
              <text>{{item.detail}}</text>
            </view>
            <view class="imgFile">
              <block wx:for="{{item.fileList}}" wx:key="*this">
                <image src="{{item}}" mode="aspectFill"></image>
              </block>
            </view>
          </view>
          <view class="rddz">
            <view class="dz">
              <image src="../../images/dz.png" mode='widthFix'></image>
              <text>10人点赞</text>
            </view>
            <view class="rd">
              <image src="../../images/rd.png" mode='widthFix'></image>
              <text>10人阅读</text>
            </view>
          </view>
        </view>
      </block>
    <!-- </block> -->
  </view>
</view>
<view class='footer'>
  <view class="nav">
    <image src="../../images/gq.png"></image>
    <text>供求市场</text>
  </view>
  <view class="nav">
    <image src="../../images/gq.png"></image>
    <text>供求市场</text>
  </view>
  <view class="nav" bindtap='bindUserTap'>
    <image src="../../images/gq.png"></image>
    <text>供求市场</text>
  </view>
</view>